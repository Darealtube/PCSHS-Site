// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Announcement {
  id       String   @id @unique @default(cuid())
  header   String
  body     String
  footer   String
  image    String?
  video    String?
  authorId String?
  author   Member?  @relation(fields: [authorId], references: [id])
  type     String
  date     DateTime @default(now())
}

model PromotionBar {
  id          String   @id @default("Promotional Bar")
  promoVid    String?
  environment String[]
  dateUpdated DateTime @unique @updatedAt
}

model Member {
  id            String         @id @unique @default(cuid())
  name          String
  image         String?
  position      String[]
  role          String[]
  announcements Announcement[]
}

model Student {
  lrn             Int      @id @unique
  name            String
  age             String
  sex             String
  date_of_birth   DateTime
  current_grade   String
  current_section String
}
